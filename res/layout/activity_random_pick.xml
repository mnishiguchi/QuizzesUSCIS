<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	tools:context="com.mnishiguchi.android.quizzesuscis.RandomPickActivity"
	>
	<TextView
		android:id="@+id/tv_quiz"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="@string/tv_quiz_hint"
		android:textSize="32sp"
		/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		>
		<Button
			android:id="@+id/btn_random_pick"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/btn_random_pick"
			/>

		<ToggleButton
			android:id="@+id/btn_question_answer"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="right"
			android:textOn="Back to Question"
    		android:textOff="Show Answer"
			android:text="@string/btn_question_answer" />

	</LinearLayout>
</LinearLayout>
